            <label for="exampleInputAddress1">Name</label>
            <input type="name" class="form-control" id="name-input" placeholder="Name">
          </div>
          <div class="form-group">
            <label for="exampleInputAddress1">Store Name</label>
            <input type="store name" class="form-control" id="storeName-input" placeholder="Store Name">
          </div>
